"""
Print header values to either stdout or to a file
"""

import argparse
import os,sys
import fitsio

def print_header(filename,ext=0):
    
    """ print header from fits file to either stdout or to a file """
    hdr = fitsio.read_header(filename, ext=ext)
    print (hdr)
    return

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description='Prints fits headers')

    parser.add_argument('filename', action='store')
    parser.add_argument('-x','--extension', action='store', default=0)
    #parser.add_argument('-o', '--output', action='store', type=str,help="Print header to given file", default=False)
    args = parser.parse_args()

    try:
        args.extension = int(args.extension)
    except:
        pass
    
    print_header(args.filename, ext=args.extension)
